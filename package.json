{
  "name": "regex-file",
  "displayName": "Regex File",
  "icon": "images/icon.png",
  "description": "Regex File extension for Visual Studio Code.",
  "version": "0.0.1",
  "repository": "git@github.com:huncholane/regex-file.git",
  "publisher": "Hygo",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:regex"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "regex-file.showButtons",
        "title": "Show Buttons"
      },
      {
        "command": "regex-file.openSidebar",
        "title": "Open Sidebar"
      },
      {
        "command": "regex-file.myCommandButton",
        "title": "My Command Button"
      }
    ],
    "languages": [
      {
        "id": "regex",
        "aliases": [
          "Regex"
        ],
        "extensions": [
          ".re",
          ".regex"
        ]
      }
    ],
    "iconThemes": [
      {
        "id": "regex-file-icons",
        "label": "Regex File Icons",
        "path": "./icon-theme.json"
      }
    ],
    "configuration": {
      "properties": {
        "regex-file.flags": {
          "type": "string",
          "default": "gm",
          "description": "Any combination of 'gimsuyx'"
        },
        "regex-file.timeout": {
          "type": "number",
          "default": 500,
          "description": "Timeout for your extension in milliseconds"
        },
        "regex-file.maxMatches": {
          "type": "number",
          "default": 10000,
          "description": "Maximum matches for your extension"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build": "tsc",
    "vsce:package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}
